<%- model_class = Activity -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<div class="cycle-slideshow" 
    data-cycle-fx="carousel"
    data-cycle-timeout="3000"
    data-cycle-carousel-fluid="false"
    data-cycle-slides="> a"
    >
  <% for item in @media %>
  <%= link_to image_tag(item.images.low_resolution.url), item.link %>
  <% if 1 == 2 %>
  <p>
    id, type, created_time, link, caption.text:<br />
    <%= "#{item.id}, #{item.type}, #{DateTime.strptime(item.created_time, '%s').strftime('%D %l:%M %p')}, #{item.link}, #{item.caption.text}" %>
  </p>
  <% end # if 1 == 2 %>
  <% end %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:starts_at) %></th>
      <th><%= model_class.human_attribute_name(:length_in_minutes) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= link_to activity.id, activity %></td>
        <td><%= link_to activity.title, activity %></td>
        <td><%= activity.starts_at.try(:strftime, "%D %H:%M %p") %></td>
        <td><%= activity.length_in_minutes %></td>
        <td><%= activity.description %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_activity_path(activity), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      activity_path(activity),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_activity_path,
            :class => 'btn btn-primary' %>

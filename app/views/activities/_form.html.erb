<%= simple_form_for @activity, :html => { :class => 'form-horizontal' } do |f| %>
  
  <%= f.input :title %>
  <%= f.input :starts_at_date, as: :datefield %>
  <%= f.input :starts_at_time, as: :hour %>
  <%= f.input :length_in_minutes, label: "Duration", as: :select, collection: [["30 minutes", 30], ["1 hour", 60], ["90 minutes", 90], ["2 hours", 120], ["3 hours", 180], ["4 hours", 240], ["5 hours", 300], ["6 hours", 360], ["8 hours", 480]] %>
  <%= f.input :description, input_html: { rows: 6, class: "span9" } %>
  
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                activities_path, :class => 'btn' %>
  </div>
<% end %>
